{
  "manifest_version": 2,
  "name": "CardifyDebate",
  "version": "1.0.1",

  "description": "Debate extension that integrates with CardifyDebate's desktop software to convert a webpage into a Verbatim card in one click.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },

  "browser_action": { "default_title": "Open in Cardify" },

  "author": "Soham Govande",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "nativeMessaging"
  ],
  "content_scripts": [
  ]
}
{
  "manifest_version": 2,
  "name": "Cardify",
  "version": "1.2.0",

  "description": "An advanced, next-gen evidence collector for debate research.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },

  "browser_action": { "default_title": "Cardify this webpage" },

  "author": "Soham Govande",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "nativeMessaging"
  ],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }]
}